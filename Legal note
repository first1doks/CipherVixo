from colorama import Fore, Style
from modules.ip_lookup import ip_lookup
from modules.username_search import username_search
from modules.website_info import website_info


def banner():
    print(Fore.CYAN + r"""
   _____ _       __            
  / ___/(_)___  / /___  _______
  \__ \/ / __ \/ __/ / / / ___/
 ___/ / / / / / /_/ /_/ (__  ) 
/____/_/_/ /_/\__/\__,_/____/  
      CipherVixo OSINT Toolkit
""" + Style.RESET_ALL)


def main():
    banner()
    print("1) –ü—Ä–æ–≤–µ—Ä–∫–∞ IP")
    print("2) –ü–æ–∏—Å–∫ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è")
    print("3) –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ —Å–∞–π—Ç–µ\n")

    choice = input(">>> ")

    if choice == "1":
        ip = input("–í–≤–µ–¥–∏—Ç–µ IP: ")
        ip_lookup(ip)

    elif choice == "2":
        user = input("–í–≤–µ–¥–∏—Ç–µ –∏–º—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è: ")
        username_search(user)

    elif choice == "3":
        site = input("–í–≤–µ–¥–∏—Ç–µ —Å–∞–π—Ç (—Å https://): ")
        website_info(site)

    else:
        print("–ù–µ–≤–µ—Ä–Ω—ã–π –≤—ã–±–æ—Ä.")


if __name__ == "__main__":
    main()
